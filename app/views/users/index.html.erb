<% row_count = 0 %>
<h1 class='text-center m-5'>Lista de Usu√°rios</h1>
<div class="container">
  <div class="row justify-content-center m-3">
    <% if @users.empty?%>
      <div class="col-12">
        <h2>No users found :(</h2>
      </div>
    <% else %>
      <div class="col-lg-8 d-flex py-3 border">
        <div class="col-2 ps-2"><strong>ID</strong></div>
        <div class="col-10"><strong>Nome</strong></div>
      </div>

      <% @users.each do |user| %>
        <div class="col-lg-8 d-flex <%= alternate_color(row_count) %> py-3 border border-top-0 align-items-center">
          <div class="col-2 ps-2"><%=user.id%></div>
          <div class="col-6"><%=user.name%></div>
          <div class="col-4 pe-2 text-end"><%= link_to "Mais detalhes", user_path(user)%>
          </div>
        </div>
        <% row_count += 1 %>
      <% end %>
    <% end %>
  </div>
</div>
